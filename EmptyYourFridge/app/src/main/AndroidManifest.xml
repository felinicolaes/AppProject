<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mprog.nl.emptyyourfridge">

    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:label="Empty Your Fridge">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".recipeListActivity"
            android:screenOrientation="portrait"
            android:label="Recipe List">
        </activity>
        <activity android:name=".addRecipeActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:label="Edit Recipe">
        </activity>
        <activity android:name=".seeRecipeActivity"
            android:screenOrientation="portrait"
            android:label="See Recipe">
        </activity>
        <activity android:name=".typeRecipeActivity"
            android:screenOrientation="portrait"
            android:label="Type Recipe">
        </activity>
        <activity android:name=".addIngredientActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:label="Add Ingredient">
        </activity>
    </application>

</manifest>
